@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product or Edit Existing Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Product Title
                    </th>
                    <th>
                        Developer
                    </th>
                    <th>
                        Publisher
                    </th>
                    <th>
                        Release Date
                    </th>
                    <th>
                        List Price
                    </th>
                    <th>
                        Price for <=50
                    </th>
                    <th>
                        Price for 50+
                    </th>
                    <th>
                        Price for 100+
                    </th>
                    <th >
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product c in Model.OrderBy(u => u.Title))
                {
                    <tr>
                        <td>
                            @c.Title
                        </td>
                        <td>
                            @c.Developer
                        </td>
                        <td>
                            @c.Publisher
                        </td>
                        <td>
                            @c.ReleaseDate
                        </td>
                        <td>
                            @c.ListPrice
                        </td>
                        <td>
                            @c.Price
                        </td>
                        <td>
                            @c.Price50
                        </td>
                        <td>
                            @c.Price100
                        </td>
                        <td>
                            @c.Category.Name
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@c.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>